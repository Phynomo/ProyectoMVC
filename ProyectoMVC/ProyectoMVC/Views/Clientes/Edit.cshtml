<button class='btn-delete btn btn-block btn-danger bi bi-trash-fill' data-id='1'></button>


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script>
    $(document).ready(function () {
        var cli_Id = $("#cli_Id").val();



        $.ajax({
            type: 'POST',
            url: '/Clientes/CargarDirecciones',
            data: { cli_Id: cli_Id },
            success: function (result) {
                var cadena = "";
                $.each(result, function (index, item) {
                    cadena += "<tr><td>" + item.dire_Calle + "</td><td>" + item.dire_Comuna + "</td><td>" + item.dep_Nombre + "</td><td>" + item.mun_Nombre + "</td><td>" + "<a href = '/Direcciones/Edit/" + item.dire_ID + "' class='btn btn-block btn-warning bi bi-pencil-fill' ></a> " + "</td><td>" + " <button onclick='hola(" + item.dire_ID + ")' id='btn-delete' class='btn-delete btn btn-block btn-danger bi bi-trash-fill' data-id='" + item.dire_ID + "'>" + item.dire_ID + "</button> " + "</td></tr>";
                    console.log(cadena);
                });
                $("#tbodyDirecciones").html(cadena);

            },
            error: function (error) {
            }
        });
    });


</script>



<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="confirm-delete-modal-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirm-delete-modal-label">Confirmar eliminación</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de que desea eliminar este elemento?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <a href="#" id="btn-confirm-delete" class="btn btn-danger" onclick="DeleteModal()">Eliminar</a>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    function DeleteModal() {
        $('#confirm-delete-modal').modal({ backdrop: 'static', keyboard: false })
    }
    function hola(id) {
        $('#confirm-delete-modal').modal('show')
        $('#btn-confirm-delete').attr('href', '/Direcciones/Delete/' + id + '00011001001110102100101010011010101' + $("#cli_Id").val());
    }
</script>

