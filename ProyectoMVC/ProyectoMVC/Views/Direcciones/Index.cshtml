@model IEnumerable<ProyectoMVC.Models.tbDirecciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";



    try
    {
        if (Session["rol"] != null)
        {
            if (Session["rol"].ToString() != "1" && Session["rol"].ToString() != "2" && Session["rol"].ToString() != "3")
            {
                Response.Redirect("/Home/Index");
            }
        }

    }
    catch
    {
        Response.Redirect("/Home/Index");
    }



}

<div class="card">
                
    <div class="card-header">
                <div class="row">
                    <div class="col">
                     <h4>tbDirecciones</h4>
                    </div>
                    <div class="col d-flex flex-row-reverse">
                        @Html.ActionLink("Crear nuevo", "Create", " ", new { @class="btn btn-block btn-success" })
                    </div>
                </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col">
                <table class="dataTable display compact stripe table-dark" id="example">
                <thead>
                    <tr>
                                                        <th>
                            @Html.DisplayNameFor(model => model.dire_Calle)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.dire_Comuna)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.dire_FechaCreacion)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.dire_FechaModificacion)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.dire_Estado)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.tbClientes.cli_Nombre)
                        </th>
                                                                        <th>
                            @Html.DisplayNameFor(model => model.tbMunicipios.dep_Id)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.tbUsuarios.usu_Usuario)
                        </th>
                                                        <th>
                            @Html.DisplayNameFor(model => model.tbUsuarios1.usu_Usuario)
                        </th>
                                        <th>Detalles</th>
                        <th>Editar</th>
                        <th>Borrar</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.dire_Calle)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.dire_Comuna)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.dire_FechaCreacion)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.dire_FechaModificacion)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.dire_Estado)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.tbClientes.cli_Nombre)
                        </td>
                                                                        <td>
                            @Html.DisplayFor(modelItem => item.tbMunicipios.dep_Id)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.tbUsuarios.usu_Usuario)
                        </td>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.tbUsuarios1.usu_Usuario)
                        </td>
                                        <td>
                        @Html.ActionLink(" ", "Details", new { id=item.dire_ID }, new { @class="btn btn-block btn-info bi bi-file-earmark-text-fill" })
       
                        </td>
                        <td>
                        @Html.ActionLink(" ", "Edit", new { id=item.dire_ID }, new { @class="btn btn-block btn-warning bi bi-pencil-fill"})
        
                        </td>
                        <td>
                        @Html.ActionLink(" ", "Delete", new { id=item.dire_ID } , new { @class="btn btn-block btn-danger bi bi-trash-fill"})
                        </td>
                                        </tr>
                }
                </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
