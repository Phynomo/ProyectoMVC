@model ProyectoMVC.Models.tbPedidosDetalles

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    try
    {
        if (Session["rol"] != null)
        {
            if (Session["rol"].ToString() != "1" && Session["rol"].ToString() != "2" && Session["rol"].ToString() != "3" && Session["rol"].ToString() != "4")
            {
                Response.Redirect("/Home/Index");
            }

        }

    }
    catch
    {
        Response.Redirect("/Home/Index");
    }

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container px-4 text-center">
    <div class="row">
        <div class="col">

            <h4>Editar PedidosDetalles</h4>

        </div>
    </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.pede_Id)

    <div class="row form-group pt-2">
        
        <div class="col">
<label>Articulos</label>
            @Html.DropDownList("art_Id", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.art_Id, "", new { @class = "text-danger" })
        </div>
        <div class="col">
            <label>Cantidad</label>
            @Html.EditorFor(model => model.pede_Cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pede_Cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row form-group pt-2">

        <div class="col">
            @Html.LabelFor(model => model.pede_Precio, htmlAttributes: new { @class = "control-label col" })
            @Html.EditorFor(model => model.pede_Precio, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pede_Precio, "", new { @class = "text-danger" })
        </div>
        <div class="col">

        </div>
    </div>





  <div class=" row form-group d-flex justify-content-end py-3">
            <div class="col d-flex justify-content-end">
                <input type="submit" value="Guardar cambios" class="btn btn-success mx-2" />
                @Html.ActionLink("Regresar al index", "Index", " ", new { @class = "btn btn-light mx-2" })
            </div>
        </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
            </div>
        </div>
}

