@model ProyectoMVC.Models.tbPedidos

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>

    <div class="row">
        <div class="col">
            <h4>tbPedidos</h4>
        </div>
        <div class="col d-flex justify-content-end">

            <p>
                @Html.ActionLink("Editar", "Edit", "", new { id = Model.ped_Id }, new
                {
                    @class = "btn btn-warning mx-2"
                }) |
                @Html.ActionLink("Regresar al index", "Index", " ", new { @class = "btn btn-light mx-2" })
            </p>


        </div>
    </div>



    <hr />

    <div class="container">
        <dl class="dl-horizontal">

            <div class="row">
                <div class="col">
                    <dt style="color:White;">
                        @Html.DisplayNameFor(model => model.ped_Fecha)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ped_Fecha)
                    </dd>
                </div>
            </div>




            <div class="row">
                <div class="col">
                    <dt style="color:White;">
                        @Html.DisplayNameFor(model => model.ped_Estado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ped_Estado)
                    </dd>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <dt style="color:White;">
                        @Html.DisplayNameFor(model => model.tbClientes.cli_Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tbClientes.cli_Nombre)
                    </dd>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <dt style="color:White;">
                        @Html.DisplayNameFor(model => model.tbDirecciones.dire_Calle)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tbDirecciones.dire_Calle)
                    </dd>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <dt style="color:White;">
                        @Html.DisplayNameFor(model => model.tbEmpleados.emp_Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tbEmpleados.emp_Nombre)
                    </dd>
                </div>
            </div>


            <div class="row">
                <div class="col">
                    <dt style="color:White;">
                        @Html.DisplayNameFor(model => model.tbMetodoPago.metpago_Descripcion)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tbMetodoPago.metpago_Descripcion)
                    </dd>
                </div>
            </div>




            <div class="row">
                <div class="col">
                    <dt style="color:White;">
                        @Html.DisplayNameFor(model => model.tbUsuarios1.usu_Usuario)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tbUsuarios1.usu_Usuario)
                    </dd>
                </div>
            </div>

        </dl>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    auditoria
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Accion</th>
                                <th>Usuario</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Creado</td>

                                <td>
                                    @Html.DisplayFor(model => model.ped_FechaCreacion)
                                </td>
                                <td>
                                    <@Html.DisplayFor(model=> model.tbUsuarios.usu_Usuario)
                                </td>

                            </tr>

                            <tr>
                                <td>Modificado</td>
                                <td>
                                    <dd>
                                        @Html.DisplayFor(model => model.ped_FechaModificacion)
                                    </dd>
                                </td>
                                <td>
                                <td>
                                    <@Html.DisplayFor(model=> model.tbUsuarios.usu_Usuario)
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>