@model ProyectoMVC.Models.tbCargos

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="container px-4 text-center">
    <div class="row">
        <div class="col">

            <h4>Editar tbCargos</h4>

        </div>
    </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.car_Id)

        <div class="row form-group pt-2">
            <div class="col">
            @Html.LabelFor(model => model.car_Nombre, htmlAttributes: new { @class = "control-label col" })
                @Html.EditorFor(model => model.car_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.car_Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group pt-2">
            <div class="col">
            @Html.LabelFor(model => model.car_FechaCreacion, htmlAttributes: new { @class = "control-label col" })
                @Html.EditorFor(model => model.car_FechaCreacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.car_FechaCreacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group pt-2">
            <div class="col">
            @Html.LabelFor(model => model.car_UsuarioCreacion, "car_UsuarioCreacion", htmlAttributes: new { @class = "control-label col" })
                @Html.DropDownList("car_UsuarioCreacion", null, htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.car_UsuarioCreacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group pt-2">
            <div class="col">
            @Html.LabelFor(model => model.car_FechaModificacion, htmlAttributes: new { @class = "control-label col" })
                @Html.EditorFor(model => model.car_FechaModificacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.car_FechaModificacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group pt-2">
            <div class="col">
            @Html.LabelFor(model => model.car_UsuarioModificacion, "car_UsuarioModificacion", htmlAttributes: new { @class = "control-label col" })
                @Html.DropDownList("car_UsuarioModificacion", null, htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.car_UsuarioModificacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row form-group pt-2">
            <div class="col">
            @Html.LabelFor(model => model.car_Estado, htmlAttributes: new { @class = "control-label col" })
                <div class="checkbox">
                    @Html.EditorFor(model => model.car_Estado)
                    @Html.ValidationMessageFor(model => model.car_Estado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



<div class=" row form-group d-flex justify-content-end py-3">
            <div class="col d-flex justify-content-end">
                <input type="submit" value="Guardar cambios" class="btn btn-success mx-2" />
                @Html.ActionLink("Regresar al index", "Index", " ", new { @class = "btn btn-light mx-2" })
            </div>
        </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
            </div>
        </div>
}

