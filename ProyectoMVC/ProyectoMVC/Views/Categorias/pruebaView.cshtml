@model ProyectoMVC.Models.tbCategoria
@Html.AntiForgeryToken()
@if (ViewBag.Message != null)
{
    <spam class="text-success"> @ViewBag.Message </spam>
}

<span class="alter-danger">
    @Html.ValidationSummary()
</span>

<div class="form-group">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.cat_Id)

    @Html.LabelFor(model => model.cat_Descripcion, htmlAttributes: new { @class = "control-label col" })
    @Html.EditorFor(model => model.cat_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.cat_Descripcion, "", new { @class = "text-danger" })
</div>