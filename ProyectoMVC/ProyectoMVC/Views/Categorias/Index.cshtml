@model IEnumerable<ProyectoMVC.Models.tbCategoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
                
    <div class="card-header">
                <div class="row">
                    <div class="col">
                     <h4>tbCategoria</h4>
                    </div>
                    <div class="col d-flex flex-row-reverse">
                        @Html.ActionLink("Crear nuevo", "Create", " ", new { @class="btn btn-block btn-success" })
                    </div>
                </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col">
                <table class="dataTable display compact stripe table-dark" id="example">
                <thead>
                    <tr>
                                                        <th>
                            @Html.DisplayNameFor(model => model.cat_Descripcion)
                        </th>
                                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                                                        <td>
                            @Html.DisplayFor(modelItem => item.cat_Descripcion)
                        </td>
                                        <td>
                        @Html.ActionLink(" ", "Details", new { id = item.cat_Id }, new { @class = "btn btn-block btn-info bi bi-file-earmark-text-fill" })
       
                        @Html.ActionLink(" ", "Edit", new { id = item.cat_Id }, new { @class = "btn btn-block btn-warning bi bi-pencil-fill" })
        
                        <button type="button" class="btn btn-block btn-danger bi bi-trash-fill" onclick="llamarmodal()"></button>
                                            
                        @Html.ActionLink(" ", "Delete", new { id = item.cat_Id }, new { @class = "btn btn-block btn-danger bi bi-trash-fill" })
                        


                                </td>
                                        </tr>
                }
                </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@Html.Partial("_ModalDelete")


<script>

    function eliminar() {
        window.location = "https://localhost:44305/Categorias/Delete/1";
    }
</script>