<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Recuperar contraseña</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="@Url.Action("Recuperar","Login")" method="POST">
                <div class="modal-body">

                    <h7 style="color:red">@Html.ValidationMessage("RValidacion") </h7>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" name="txtRUsuario" placeholder="Usuario" required>
                        <label for="floatingInput">Usuario</label>
                        <h7 style="color:red">@Html.ValidationMessage("RvalidarUsuario") </h7>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="password" class="form-control" id="floatingPassword" name="txtRClave" placeholder="Contraseña" required>
                        <label for="floatingPassword">Nueva Contraseña</label>
                        <h7 style="color:red">@Html.ValidationMessage("RvalidarClave") </h7>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>

    </div>
</div>
